  {{#with foundPet}}
  <div class="detail">
      <img src="{{imgUrl}}" alt="{{breed}}" style="width:25%" />
       <h1><b>Name: {{name}} </b></h1>
      <p><b>Gender:</b> {{gender}}</p>
      <p><b>Age:</b> {{age}}</p>
      <p><b>Breed:</b> {{breed}}</p>
      <p><b>Description:</b> {{description}}</p>
      <a href="/pet/edit/{{petId}}">Edit  Detail</a>
      </br>
      <form action="/" method="POST">
        <button type="submit">Return to Pet List</button>
      </form>
 </div>
 {{/with}}