<h1>Edit a New Pet</h1>
{{#with foundPet}}
<form action="/pet/edit/{{petId}}" method="POST">
  <label for="type">Pet Type: </label>
  <input type="text" name="type" value="{{type}}"/><br />

  <label for="name">Pet Name: </label>
  <input type="text" name="name" value="{{name}}"/><br />

  <label for="imgUrl">Picture Hyperlink: </label>
  <input type="text" name="imgUrl" value="{{imgUrl}}"/><br />

  <label for="gender">Gender: </label>
  <select name="gender">
    <input type="text" name="gender" value="{{gender}}"/><br />

  <label for="age">Age: </label>
  <select name="age">
    <input type="text" name="age" value="{{age}}"/><br />

  <label for="breed">Breed: </label>
  <input type="text" name="breed" value="{{breed}}"/><br />

  <label for="description">Description: </label>
  <input type="text" name="description" value="{{description}}"/><br />

  <button type="submit">Update Detail</button>
</form>
</br>
 <form action="/pet/delete/{{petId}}" method="POST">
        <button type="submit">Delete Detail</button>
      </form>
</br>
{{/with}}


<form action="/" method="POST">
    <button type="submit">Return to Pet List</button>
</form>
